    </nav>
  </footer>
  
  <script>
    var ruta = window.location.pathname;
    if(ruta=='/'){
      document.getElementById('inicio').style='filter: opacity(0.4) drop-shadow(0 0 0 rgb(0, 360, 360)); ';
      document.getElementById('inicioletras').style='color: rgb(0, 180, 360);';
      document.getElementById('perfil2').style='display:none';
    }else if(ruta=='/calculadora'){
      document.getElementById('calculadora').style='filter: opacity(0.4) drop-shadow(0 0 0 rgb(0, 360, 360)); ';
      document.getElementById('calculadoraletras').style='color: rgb(0, 180, 360);';
      document.getElementById('perfil2').style='display:none';
    }else if(ruta=='/comunidad'){
      document.getElementById('comunidad').style='filter: opacity(0.4) drop-shadow(0 0 0 rgb(0, 360, 360)); ';
      document.getElementById('comunidadletras').style='color: rgb(0, 180, 360);';
      document.getElementById('perfil2').style='display:none';
    }else if(ruta=='/perfil' || ruta=='/perfil/'){
      document.getElementById('perfil').style='border: 2px solid rgb(360, 100, 17); width: 40px; margin-top: 6px;';
      document.getElementById('perfil').style='display:none';

    }else if(ruta=='/perfil/edit' || ruta=='/perfil/edit/'){
      document.getElementById('perfil').style='border: 2px solid rgb(360, 100, 17); width: 40px; margin-top: 6px;';
      document.getElementById('perfil').style='display:none';

    }
  </script>