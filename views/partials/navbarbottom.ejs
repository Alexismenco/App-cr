<style>
  footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 50px;
    background-color: #333;
    color: #fff;
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
    justify-content: center;
  }
  ul {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  li {
    margin: 18px;
    flex-grow: 1;
  }
  a {
    color: #fff;
    text-decoration: none;
  }
  img{
    width: 25px;
    display: block;
    margin: auto;
    margin-top: 5px;
  }
  .perfil{
    border-radius: 50%;
    width: 40px; 
    margin-top: 8px;
    
  }
  nav{
    background-color: rgb(45, 45, 62);
  }
  a:hover {
      text-decoration: none;
      color: rgb(0, 180, 360);
    }
  .perfil:hover{
    border: 2px solid rgb(360, 100, 17);
  }
  svg{
    padding-top: 5px;
    display: flex;
    width: 25px;
    height: 25px;
  }
  #inicioletras, #calculadoraletras, #comunidadletras {
    display: flex; /* establece el contenedor como un contenedor flexible */
    align-items: center; /* centra verticalmente los elementos en el contenedor */
    justify-content: center; /* centra horizontalmente los elementos en el contenedor */
  }
  #inicio, #calculadora, #comunidad {
    display: block; /* asegura que el SVG sea un elemento en bloque */
    margin: 0 auto; /* establece los márgenes izquierdo y derecho en automático para centrarlo horizontalmente */
  }
  </style>
  
