<style>
.btn-cursos{
    font-size: 25px;
    color: white;
    background-color: rgb(45, 45, 62);
    padding-left: 30px;
    padding-right: 30px;
}

.btn-cursos2{
    font-size: 17px;
    color: white;
    background-color: rgb(45, 45, 62);
    padding-left: 30px;
    padding-right: 30px;
    width: 60%;
    text-align: left;
}

.embed-responsive {
  position: relative;
  width: 100%;
  padding-bottom: 56.25%; /* relación de aspecto 16:9 */
}

.embed-responsive iframe {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.cursos-disponibles{
    border: 2px solid rgb(45, 45, 62);
    color: rgb(45, 45, 62);
    font-weight: bold;
}

#barra{
  background-color: rgb(45, 45, 62);
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
  align-items: center;
  justify-content: center;
}
:root{
    --bar-color: white;
    --fill-size: 0%;
}

.progreso{
    position: relative;
    width: 200px;
    height: 20px;
    background-color: rgb(45, 45, 62);;
    border-radius: 2em;
    overflow: hidden;
    border: 2px solid white; 
}

.progreso::before{
    content: '';
    border-radius: 2em;
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: var(--bar-color);
    transform: translateX(-100%);
    animation: fill-bar 0.7s 0.3s ease-in-out forwards;
}

@keyframes fill-bar {
    to{
        transform: translateX(var(--fill-size));
    }
}

.loading{
    display: block;
}
</style>

<script>
    window.onload = function() {
        if(document.referrer=='http://localhost:3000/login'){
            document.getElementById("barra").style.visibility = "visible";
            document.getElementById("progreso").className = "progreso";

              // Oculta la pantalla de presentación después de 1 segundo
            setTimeout(function() {
                document.getElementById("barra").style.display = "none";
                document.getElementById("contenedor-inicio").style.visibility = "visible";
                document.getElementById("fondo").style.backgroundColor = "white";
                document.getElementById("navbarbotton").style.visibility = "visible";
                document.getElementById("navbar2").style.visibility = "visible";
            }, 1000);
        }else{
            document.getElementById("barra").style.display = "none";
            document.getElementById("fondo").style.backgroundColor = "white";
            document.getElementById("contenedor-inicio").style.visibility = "visible";
            document.getElementById("navbarbotton").style.visibility = "visible";
            document.getElementById("navbar2").style.visibility = "visible";


        }
    
    };
  </script>

<div id="barra" style="visibility: hidden;">

