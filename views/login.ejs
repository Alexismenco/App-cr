<style>
@media (max-width: 1700px) {
    .formulario{
      width: 40%;
    }
}
    
  @media (max-width: 600px) {
    .formulario{
      width: 100%;
      height: 100%;
    }
    .email .password {
      min-width: 80%;
    }
  }

  .trade{
    border-top: 2px solid rgb(255, 255, 255);
    border-bottom: 2px solid rgb(255, 255, 255);
    border-left: 1px solid rgb(124, 124, 124);
    border-right: 1px solid rgb(124, 124, 124);
    border-radius: 5px;
    font-size: 45px;
    font-weight: bold;
  }
  #splash{
    margin: 200px;
    display: flex;
    justify-content: center; /* Alinea horizontalmente */
    align-items: center; /* Alinea verticalmente */
  }
  
  
 
  </style>
    <script>
      window.onload = function() {
        // Oculta la pantalla de presentación después de 1 segundo
        setTimeout(function() {
          var splash = document.getElementById("splash");
          splash.style.display = "none";
          document.getElementById("contenedor-login").style.visibility = "visible";

        }, 1000);
      };
    </script>

<div id="splash">
  <a class="navbar-brand p-2 m-2 text-white trade">TRADE</a>

</div>
<div id="contenedor-login" class="contenedor-login text-center mt-5 mb-5" style="visibility: hidden;">

    <form class="container formulario col-3 mt-5" action="/login" method="post">
        <span class="trade p-2 m-2 text-white">TRADE</span>

       
    
        <div class="form-floating text-dark mt-5">
          <span class="text-white">Usuario</span>
          <input type="email" name="email" class="form-control email mt-2" placeholder="name@example.com" required>
          <!--<label for="floatingInput" class="">Usuario</label>-->
        </div>
        <div class="form-floating mt-4 text-dark">
          <span  class="text-white">Contraseña</span>
          <input type="password" class="form-control password mt-2" id="floatingPassword" name="password" placeholder="Password" required>
          <!--<label for="floatingPassword">Contraseña</label>-->
        </div>
    
        <div class="checkbox mb-3">
    
        </div>
        <div class="help">
          <%- existeUsuario==false?'<p class="mt-3 text-danger"> Error correo o contraseña incorrectas</p>':''%> 
  
      </div>
        <button class="w-100 mt-4 btn btn-lg  bg-light" type="submit">Iniciar sesión</button>
       
      </form>
      <br>
      <a href="/resetpassword" class="text-white forgot-password1 mt-4">Olvidaste la contraseña?</a>
      <br>
      <a href="/register" class="text-white forgot-password1 mt-4">Registrarse</a>


    </div>

  

 
